        //        builder.
        //    }
        //});
    }

    private void OnClickKeyboard()
    {
        IsKeyboard = !IsKeyboard;
    }

    protected override async Task OnInitializedAsync()
    {
        foods = await Http.GetFromJsonAsync<MealViewModel[]>("foods/async");
    }
}
